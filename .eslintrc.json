{
    "parser": "@typescript-eslint/parser",
    "extends": "eslint:recommended",
    "parserOptions": {
       "ecmaVersion": 2018,
       "sourceType": "module"
    },
    "env": {
       "browser": true,
       "node": true,
       "jest/globals": true
    },
    "globals": {
       "App": true
    },
    "plugins": ["jest"],
    "rules": {
        "jest/no-disabled-tests": "warn",
        "jest/no-focused-tests": "error",
        "jest/no-identical-title": "error",
        "jest/prefer-to-have-length": "warn",
        "jest/valid-expect": "error"
    }
}
